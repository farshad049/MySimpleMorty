<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mysimplemorty">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SimpleMortyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_home_screen"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySimpleMorty"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <nav-graph android:value="@navigation/nav_graph"/>

            //by this modo, this activity will be the first activity that runs on the screen
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>

    </application>

</manifest>