<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/characterListFragment">

    <fragment
        android:id="@+id/characterListFragment"
        android:name="com.example.mysimplemorty.CharacterListFragment"
        android:label="Character List"
        tools:layout="@layout/fragment_character_list">
        <action
            android:id="@+id/action_characterListFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popExitAnim="@anim/slide_out_to_right"
            app:popEnterAnim="@anim/slide_in_from_left"/>
    </fragment>

    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.example.mysimplemorty.CharacterDetailFragment"
        android:label="Character Detail"
        tools:layout="@layout/fragment_character_detail">

        <deepLink app:uri="https://simplemorty.com/character/{characterId}"/>


        <argument
            android:name="characterId"
            android:defaultValue="-1"
            app:argType="integer"
            />
    </fragment>

    <fragment
        android:id="@+id/episodeListFragment"
        android:name="com.example.mysimplemorty.EpisodeListFragment"
        android:label="EpisodeListFragment"
        tools:layout="@layout/fragment_episode_list"/>
</navigation>